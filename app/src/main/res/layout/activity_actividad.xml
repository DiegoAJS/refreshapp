<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actividad"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Actividad"
        app:titleTextColor="@android:color/background_light"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="16sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTituloActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="titulo"
                android:textSize="24sp"
                android:fontFamily="@font/poppinsbold"/>
            <TextView
                android:id="@+id/tvOrganizadorActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="organizador"
                android:textSize="16sp"

                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/tvFechaPublicacionActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fecha"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="right"/>
            <ImageView
                android:id="@+id/ivFotoActividad"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_gallery"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_gravity="center_horizontal"
                style="@style/CardView.Light">
                <TextView
                    android:id="@+id/tvFechaActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="fecha de la actividad"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/ic_calendario"/>

                <TextView
                    android:id="@+id/tvUrlActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:text="Enlace"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_link"/>
                <TextView
                    android:id="@+id/tvVideoActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="Video"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/ic_play_arrow"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvLugarActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lugar"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_place"/>

            <TextView
                android:id="@+id/tvContenidoActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contenido"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
