<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp">

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:elevation="8dp">

        <TextView
            android:id="@+id/tvFuenteItemNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fuente"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvFechaItemNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:maxLines="1"
            android:textStyle="italic"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvFuenteItemNoticia"/>

        <TextView
            android:id="@+id/tvTitulosItemNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="12dp"
            android:textSize="24dp"
            android:text="title"
            android:layout_below="@+id/tvFechaItemNoticia"/>

        <TextView
            android:id="@+id/tvContentItemNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="contenido"
            android:layout_below="@+id/tvTitulosItemNoticia"/>


        <TextView
            android:id="@+id/tvDetalleItemNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contenido"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvContentItemNoticia"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
